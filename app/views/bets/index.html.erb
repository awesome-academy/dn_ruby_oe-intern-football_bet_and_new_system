<% provide :title, t(".list_bet") %>
<div class="row">
  <aside class="col-md-6">
    <div class="mt-3">
      <h3 class="text-center text-warning"><%= t ".infor_match" %></h3>
      <div class="row fs-4">
        <div class="col-md-4 text-danger"><%= t ".home" %></div>
        <div class="col-md-8"><%= @match.home_name %></div>
      </div>
      <div class="row fs-4">
        <div class="col-md-4 text-danger"><%= t ".guest" %></div>
        <div class="col-md-8"><%= @match.guest_name %></div>
      </div>
      <div class="row fs-4">
        <div class="col-md-4 text-danger"><%= t ".day" %></div>
        <div class="col-md-8"><%= I18n.l @match.time %></div>
      </div>
    </div>
  </aside>

  <div class="col-md-6 mt-3">
    <% if @bets.any? %>
      <h3 class="text-danger">
        <%= t ".list_bet" %>
      </h3>
      <%= search_form_for @q, url: bets_path,
                        html: { method: :get } do |f| %>
        <%= f.hidden_field :match_id, value: @match.id %>
        <%= f.label :content_cont %>
        <%= f.search_field :content_cont %>

        <%= f.submit %>
      <% end %>
      <div class="row border-bottom">
        <div class="col-md-1 fs-5 text-primary">
          <%= t ".title_#" %>
        </div>
        <div class="col-md-5 fs-5 text-center text-primary">
          <%= t ".title_content" %>
        </div>
        <div class="col-md-2 fs-5 text-primary">
          <%= t ".title_rate" %>
        </div>
        <div class="col-md-4 fs-5 text-primary">
          <%= t ".title_action" %>
        </div>
      </div>
      <ol class="bets">
        <%= render @bets %>
      </ol>
      <%== pagy_nav @pagy %>
    <% else %>
      <%= t ".empty" %>
    <% end %>
  </div>
</div>
