<% provide :title, t(".history_balance") %>
<div class="mb-5" style="margin-left: 60%">
  <%= search_form_for @q, class: "input-group", url: currencies_path do |f| %>
    <%= f.search_field :created_at_eq, class: "form-control-lg", placeholder: t(".search_history") %>
    <div class="input-group-append">
      <%= f.submit t(".btn_search"), class: "btn btn-lg btn-outline-secondary" %>
    </div>
  <% end %>
</div>

<div class="row">
  <aside class="col-md-4">
    <%= render "type_currencies" %>
  </aside>

  <div class="col-md-8">
    <% if current_user.currencies.any? %>
      <h3>
        <%= t ".history_currencies" %>
        (<%= current_user.currencies.search_by_type(params[:type]).count %>)
      </h3>
      <ol class="currencies">
        <%= render @currencies %>
      </ol>
      <%== pagy_nav(@pagy) %>
    <% else %>
      <%= t ".empty" %>
    <% end %>
  </div>
</div>
