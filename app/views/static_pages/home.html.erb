<% provide :title, t(".home") %>
<div class="center jumbotron">
  <h1><%= t ".welcome" %></h1>
  <h2>
  <%= t ".intro_home1" %>
  <%= link_to t(".football_bet"), "http://www.railstutorial.org/" %>
  <%= t ".intro_home2" %>
  </h2>
</div>
<div class="mt-3" style="margin-left: 35%">
  <%= search_form_for @q, class: "input-group", url: root_path do |f| %>
    <%= f.search_field :teams_cont, class: "form-control-lg", placeholder: t(".soccer_match")%>
    <div class="input-group-append">
      <%= f.submit :search, class: "btn btn-lg btn-outline-secondary" %>
    </div>
  <% end %>
</div>
<ol class="center"><%= render @soccer_matches %></ol>

